{
  "name": "11ty-design-system-example",
  "version": "0.1.0",
  "description": "In-progress, live on twitch.tv/5t3phDev",
  "main": "index.html",
  "scripts": {
    "color-tokens": "a11y-color-tokens --outputDirPath='src/sass' --colorTokensPath='src/_data/colorTokens.js' --compatibilityDocsPath='src/__docs'",
    "watch:sass": "sass  --no-source-map --watch src/sass:public/css",
    "watch:eleventy": "eleventy --serve",
    "build:sass": "sass  --no-source-map src/sass:public/css",
    "build:eleventy": "eleventy",
    "postbuild": "postcss public/css/*.css -u autoprefixer cssnano -r --no-map",
    "start": "cross-env ELEVENTY_ENV=dev npm-run-all color-tokens build:sass --parallel watch:*",
    "build": "cross-env ELEVENTY_ENV=prod npm-run-all color-tokens build:sass build:eleventy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/5t3ph/11ty-design-system-example.git"
  },
  "author": "5t3ph",
  "license": "ISC",
  "dependencies": {
    "@11ty/eleventy": "^1.0.0",
    "autoprefixer": "^10.4.2",
    "cross-env": "^7.0.3",
    "cssnano": "^5.0.17",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.6",
    "postcss-cli": "^9.1.0",
    "sass": "^1.49.7"
  },
  "browserslist": [
    "> 0.5%",
    "not IE 11"
  ],
  "devDependencies": {
    "a11y-color-tokens": "^0.5.0"
  }
}
